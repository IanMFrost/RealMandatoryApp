<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

    <include android:id="@+id/tool_bar"
        layout="@layout/toolbar"/>


    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewUserEmail"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add reservation"
        android:id="@+id/ButtonAddReservation"
        android:layout_gravity="center_horizontal"
        android:onClick="addReservationOnclick"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Reservations"
        android:id="@+id/ButtonShowReservations"
        android:layout_gravity="center_horizontal"
        android:onClick="ShowReservationOnclick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonDeleteReservations"
        android:text="Delete reservations"
        android:layout_gravity="center_horizontal"/>
    
</LinearLayout>